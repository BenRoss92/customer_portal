{% extends 'base.html.twig' %}

{% block body %}

<h2>Basic Info:</h2>
<ul>
  <li id="name">Name: {{name}}</li>
  <li id="address">Address: {{address}}</li>
  <li id="city">City: {{city}}</li>
  <li id="country">Country: {{country}}</li>
</ul>

<h1>Passengers list</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>First_name</th>
            <th>Surname</th>
            <th>Passport_id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for passenger in passengers %}
        <tr>
            <td>{{ passenger.title }}</td>
            <td>{{ passenger.firstname }}</td>
            <td>{{ passenger.surname }}</td>
            <td>{{ passenger.passportid }}</td>
            <td>
                <form action="{{ path('passenger_delete', { 'id': passenger.id }) }}" method="post">
                  <input type="hidden" name="_method" value="DELETE" />
                  {{ form_widget(deleteForms[passenger.id]) }}
                  <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('passenger_new') }}">Create a new passenger</a>
    </li>
</ul>

{% endblock %}

{% block stylesheets %}

{% endblock %}
